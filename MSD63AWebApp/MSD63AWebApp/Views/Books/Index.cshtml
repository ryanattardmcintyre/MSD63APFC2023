@model IEnumerable<MSD63AWebApp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { isbn = item.Isbn }) |
                @Html.ActionLink("Details", "Details", new { isbn = item.Isbn }) |
                @Html.ActionLink("Delete", "Delete", new { isbn = item.Isbn })|
                @Html.ActionLink("Reserve Book", "Create", "Reservations", new { isbn = item.Isbn })|
                @Html.ActionLink("View History", "List", "Reservations", new { isbn = item.Isbn })|
                <a href="@item.Link">Download</a>


                @*<a href="/Reservations/Create?isbn=@item.Isbn">Reserve book</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
